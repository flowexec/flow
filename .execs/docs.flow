# yaml-language-server: $schema=https://flowexec.io/schemas/flowfile_schema.json
visibility: public
tags: [docs]
executables:
  - verb: start
    name: site
    aliases: [docs]
    description: Run the documentation site locally (from prerendered content)
    serial:
      dir: //
      execs:
        - ref: build docs
        - cmd: npx serve dist -l 3000

  - verb: start
    name: docsify
    description: Run the documentation site locally using the docsify CLI
    exec:
      dir: //
      cmd: docsify serve docs --open

  - verb: build
    name: docs
    description: Prerender docsify documentation site for the project
    exec:
      dir: //
      cmd:
        node ./scripts/prerender.js

  - verb: show
    name: flowfile
    aliases: [executables, exec, executable]
    description: Render the FlowFile reference documentation
    render:
      dir: //docs/types
      templateFile: flowfile.md

  - verb: show
    name: ws
    aliases: [workspace]
    description: Render the Flow Workspace reference documentation
    render:
      dir: //docs/types
      templateFile: workspace.md

  - verb: show
    name: cfg
    aliases: [config]
    description: Render the flow user configuration reference documentation
    render:
      dir: //docs/types
      templateFile: config.md
