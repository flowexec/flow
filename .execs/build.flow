# yaml-language-server: $schema=https://flowexec.io/schemas/flowfile_schema.json
visibility: private
tags: [development]
executables:
  - verb: generate
    description: Generate code and documentation for the project.
    serial:
      failFast: false
      execs:
        - ref: generate cli
        - ref: generate docs

  - verb: build
    name: binary
    aliases: [bin, flow]
    description: Build the flow binary.
    exec:
      dir: //
      args:
        - envKey: BIN_PATH
          default: .bin
          pos: 1
          required: false
      params:
        - envKey: BIN_NAME
          text: flow
      cmd: |
        go build -o ${BIN_PATH}/${BIN_NAME}
        echo "flow built at ${BIN_PATH}/${BIN_NAME}"

  - verb: generate
    name: docs
    aliases: [documentation]
    description: Generate docsify documentation for the project.
    tags: [docs]
    parallel:
      failFast: false
      dir: //
      execs:
        - cmd: go run ./tools/docsgen/.
        - cmd: ./scripts/completions.sh

  - verb: generate
    name: cli
    aliases: [go]
    tags: [go, cli]
    exec:
      dir: //
      cmd: |
        echo "Generating go CLI code..."
        go generate ./...
        echo "All go code generated successfully"

  - verb: update
    name: modules
    description: Update project dependencies
    tags: [go]
    aliases: [gomod, deps]
    exec:
      dir: //
      cmd: |
        echo "updating go modules..."
        go get -u ./...
        go mod tidy
