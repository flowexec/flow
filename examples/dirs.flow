visibility: private
namespace: examples
executables:
  - verb: run
    name: tmp-dir
    exec:
      dir: f:tmp
      cmd: |
        touch test.txt
        mkdir dir
        ls -l
        echo "Current directory: $(pwd)"

  - verb: run
    name: home-dir
    exec:
      dir: ~/
      cmd: |
        echo "Current directory: $(pwd)"

  - verb: run
    name: ws-dir
    exec:
      dir: //
      cmd: |
        echo "Current directory: $(pwd)"

  - verb: run
    name: working-dir
    exec:
      dir: .
      cmd: |
        echo "Current directory: $(pwd)"

  - verb: run
    name: exec-dir
    exec:
      dir: /
      cmd: |
        echo "Current directory: $(pwd)"

  - verb: run
    name: env-dir
    exec:
      dir: $FLOW_CONFIG_PATH/
      cmd: |
        echo "Current directory: $(pwd)"

  - verb: run
    name: param-env-dir
    exec:
      dir: $PARAM_DIR
      cmd: |
        echo "Current directory: $(pwd)"
      params:
        - prompt: "Enter a directory path"
          envKey: PARAM_DIR