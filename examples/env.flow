visibility: private
namespace: examples
executables:
  - verb: run
    name: mixed-env
    exec:
      dir: f:tmp
      cmd: |
        echo "Hello, $NAME!"
        echo "Your favorite color is $COLOR!"
        echo "Your favorite shape is $SHAPE!"
        echo "Your favorite food is $FOOD!"
      params:
        - text: flow
          envKey: NAME
        - prompt: What is your favorite color?
          envKey: COLOR
      args:
        - pos: 1
          envKey: SHAPE
          required: false
          default: "circle"
        - flag: food
          envKey: FOOD
          required: true

  - verb: run
    name: text-param
    exec:
      file: hello.sh
      params:
        - text: flow
          envKey: NAME

  - verb: run
    name: prompt-param
    exec:
      file: hello.sh
      params:
        - prompt: What is your name?
          envKey: NAME

  - verb: run
    name: secret-param
    exec:
      file: hello.sh
      params:
        - secretRef: flow-example-name
          envKey: NAME

  - verb: run
    name: positional-arg
    exec:
      file: env-script.sh
      args:
        - pos: 1
          envKey: NAME
          required: true

  - verb: run
    name: flag-arg
    exec:
      file: env-script.sh
      args:
        - flag: name
          envKey: NAME
          required: true

  - verb: run
    name: optional-arg
    exec:
      file: env-script.sh
      args:
        - flag: name
          envKey: NAME
          required: false
          default: "flow"

  - verb: run
    name: mixed-args
    exec:
      cmd: |
        echo "Arg1: $TEST_ARG1, Arg2: $TEST_ARG2, Arg3: $TEST_ARG3"
      args:
        - envKey: TEST_ARG1
          pos: 1
          type: int
          required: true
        - envKey: TEST_ARG2
          pos: 2
          required: false
          default: "green"
        - envKey: TEST_ARG3
          flag: arg3
          default: "grape"
