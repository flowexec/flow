# yaml-language-server: $schema=https://raw.githubusercontent.com/jahvon/flow/HEAD/schemas/flowfile_schema.json
visibility: private
namespace: examples
description: This is a flow executable that demonstrates how to use request executable types.
tags: [request]
executables:
  - verb: send
    name: post-request
    request:
      method: POST
      url: https://httpbin.org/post
      headers:
        Content-Type: application/json
      body: '{"hello": "world"}'
      logResponse: true

  - verb: send
    name: failed-request
    request:
      url: https://httpbin.org/status/500
      logResponse: true
      validStatusCodes: [200]

  - verb: get
    name: request-response
    request:
      method: POST
      url: https://httpbin.org/post
      headers:
        Content-Type: application/json
      body: '{"hello": "world"}'
      responseFile:
        dir: /
        filename: savedResponse.yaml
        saveAs: yaml

  - verb: transform
    name: request-response
    request:
      method: POST
      url: https://httpbin.org/post
      body: '{"hello": "world"}'
      logResponse: true
      transformResponse: .args.hello = "universe" | .args

  - verb: send
    name: param-request
    request:
      params:
        - text: flow
          envKey: NAME
      method: POST
      url: https://httpbin.org/anything/$NAME
      headers:
        Application: $NAME
      body: '{"hello": "$NAME"}'
      logResponse: true

  - verb: watch
    name: timeout-request
    request:
      url: https://httpbin.org/delay/10
      timeout: 5s